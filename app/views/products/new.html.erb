<h1>Products</h1>

<% if @product.errors.any? %>
	<ul>
		<% @product.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for(@product) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br><br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br><br>
	<%= f.label :bidding %>
	<%= f.datetime_local_field :bidding %>
	<br><br>
	<%= f.button %>
<% end %>